<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="handleConfirm">
		<sortItems>
			<ViewSettingsItem text="Employee ID" key="EmployeeID" selected="true" />
			<ViewSettingsItem text="Name" key="Name" />
		    <ViewSettingsItem text="Payroll Type" key="PayrollType" />
			
		</sortItems>
		<groupItems>
			<ViewSettingsItem text="Payroll Type" key="PayrollType"/>
			<ViewSettingsItem text="Name" key="Name" />
		</groupItems>
		
		<filterItems>
			
			<ViewSettingsFilterItem
				text="Should be PI"
				key="Should be PI"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="Less Than 5" key="Hours___LE___5___X" />
					<ViewSettingsItem text="Between 5 and 8" key="Hours___BT___5___8" />
					<ViewSettingsItem text="More Than 10" key="Price___GT___10___X" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>