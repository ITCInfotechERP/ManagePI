<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.m.semantic"
	controllerName="com.itcActivitybook.controller.activitybooklist" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Page>
		<customHeader>
			<Bar class="headerToolBarBackground">
				<contentLeft>
					<Button icon="sap-icon://home" tooltip="Home" press="homeButton"/>
				</contentLeft>
				<contentMiddle>
					<Title text="Activity Book" level="H3"/>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://bell" tooltip="Notification"/>
					<Text text="Parag"/>
					<Button text="Logout"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<SplitContainer>
				<masterPages>
					<semantic:MasterPage width="auto" class="activityMasterPageColor sapUiResponsiveContentPadding" title="Activity Book List">
						<SearchField width="auto" search="onFilterProducts" class="sapUiTinyMargin" />
						<List id="List1" mode="SingleSelectMaster" selectionChange="showDetails" items="{ path : '/Employees'}">
							<items>
								<ObjectListItem title="{Book}" number="{PSID}" intro="{GroupID}"></ObjectListItem>
							</items>
						</List>
						<semantic:customFooterContent>
							<OverflowToolbarButton icon="sap-icon://add" press="navToDailyActivity"/>
						</semantic:customFooterContent>
					</semantic:MasterPage>
				</masterPages>
				<detailPages>
					<semantic:DetailPage title="Activity Book Detail" class="activityMasterPageColor">
						<semantic:content>
							<ObjectHeader id="objectHeader" title="{DialogModel>/ActivitySelected/0/Book}" titleActive="false" titlePress="onShowDetailPopover"
								responsive="true" number="{DialogModel>/ActivitySelected/0/CodeID}">
								<attributes>
									<ObjectAttribute text="{DialogModel>/ActivitySelected/0/GroupID}"/>
								</attributes>
							</ObjectHeader>
							<IconTabBar id="iconTabBar" class="tabBar" select="handleIconTabBarSelect">
								<items>
									<IconTabFilter icon="sap-icon://group" text="Employee Data" key="Emp Data" tooltip="Employee Data">
										<content>
											<VBox class="sapUiSmallMargin">
												<f:SimpleForm id="SimpleFormDisplay354" editable="false" layout="ResponsiveGridLayout" title="" labelSpanXL="3" labelSpanL="3"
													labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
													columnsL="1" columnsM="1" singleContainerFullSize="false">
													<f:content>
														<Label text="Discipline" class="fname"/>
														<Text id="nameText" text="{DialogModel>/ActivitySelected/0/Discipline ID}"/>
														<Label text="Group" class="fname"/>
														<Text text="{DialogModel>/ActivitySelected/0/GroupID}"/>
														<Label text="Code" class="fname"/>
														<Text text="{DialogModel>/ActivitySelected/0/CodeID}"/>
														<Label text="Hours" class="fname"/>
														<Text id="countryText" text="{DialogModel>/ActivitySelected/0/Hours}"/>
														<Label text="Quantity" class="fname"/>
														<Text id="countryText1" text="{DialogModel>/ActivitySelected/0/Quantity}"/>
													</f:content>
												</f:SimpleForm>
											</VBox>
										</content>
									</IconTabFilter>
									<IconTabSeparator/>
									<IconTabFilter icon="sap-icon://manager" count="" text="Project Details" key="Project Details" tooltip="Project Details">
										<content>
											<!--<f:SimpleForm id="SimpleFormDisplay" editable="false" layout="ResponsiveGridLayout" title="" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
												labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
												singleContainerFullSize="false">
												<f:content>-->
													<Table id="idProductsTable" alternateRowColors="true" mode="SingleSelectLeft" inset="false"
														items="{ path: '/Employees', sorter: { path: 'Name' } }">
														
														<headerToolbar>
														<Toolbar>
															<ToolbarSpacer/>
															<SearchField width= "50%" search = "onSearch"/>
															<Button icon="sap-icon://add" press="navToActivitydetails" />
														</Toolbar>	
															
															
														</headerToolbar>
														
														<columns>
															<Column width="13em">
																<Text text="Discipline ID"/>
															</Column>
															<Column minScreenWidth="Tablet" demandPopin="true">
																<Text text="Group ID"/>
															</Column>
															<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
																<Text text="Code ID"/>
															</Column>
															<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
																<Text text="Hours"/>
															</Column>
															<Column hAlign="End">
																<Text text="Quantity"/>
															</Column>
														</columns>
														<items>
															<ColumnListItem>
																<cells>
																	<ObjectIdentifier title="{EmployeeID}"/>
																	<Text text="{Name}"/>
																	<Text text="{Payroll Type}"/>
																	<ObjectNumber number="{Should be PI}"/>
																	<ObjectNumber number="{PI By CH}"/>
																</cells>
															</ColumnListItem>
														</items>
													</Table>
<!--												</f:content>
											</f:SimpleForm>-->
										</content>
									</IconTabFilter>
								</items>
							</IconTabBar>
						</semantic:content>
						<semantic:customFooterContent>
							<Button text="Submit" press="onPress"/>
							<Button text="Save" press="onPress"/>
							<Button text="Cancel" press="onNavBack"/>
							<Button icon="sap-icon://email" tooltip="Send Email" press="onShareEmailPress"/>
						</semantic:customFooterContent>
					</semantic:DetailPage>
				</detailPages>
			</SplitContainer>
		</content>
	</Page>
</mvc:View>