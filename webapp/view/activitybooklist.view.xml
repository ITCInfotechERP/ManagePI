<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.m.semantic"
	controllerName="com.itcActivitybook.controller.activitybooklist" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Page>
		<customHeader>
			<Bar class="headerToolBarBackground">
				<contentLeft>
					<Button icon="sap-icon://home" tooltip="Home" press="homeButton"/>
				</contentLeft>
				<contentMiddle>
					<Title text="Activity Book" level="H3"/>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://bell" tooltip="Notification"/>
					<Text text="Parag"/>
					<Button text="Logout"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<SplitContainer>
				<masterPages>
					<semantic:MasterPage class="activityMasterPageColor sapUiResponsiveContentPadding" title="Activity Book List">
						<SearchField width="auto" search="onSearchListItems" class="sapUiTinyMargin"/>
						<List id="List1" mode="SingleSelectMaster" selectionChange="showDetails" items="{ path : '/Employees'}">
							<items>
								<ObjectListItem title="{Book}" number="{PSID}" intro="{GroupID}"></ObjectListItem>
							</items>
						</List>
						<semantic:customFooterContent>
							<OverflowToolbarButton icon="sap-icon://add" press="navToDailyActivity"/>
						</semantic:customFooterContent>
					</semantic:MasterPage>
				</masterPages>
				<detailPages>
					<semantic:DetailPage title="Activity Book Detail" class="activityMasterPageColor">
						<semantic:content>
							<ObjectHeader id="objectHeader" title="{DialogModel>/ActivitySelected/0/Book}" titleActive="false" titlePress="onShowDetailPopover"
								responsive="true" number="{DialogModel>/ActivitySelected/0/CodeID}">
								<attributes>
									<ObjectAttribute text="{DialogModel>/ActivitySelected/0/GroupID}"/>
								</attributes>
							</ObjectHeader>
							<IconTabBar id="iconTabBar" class="tabBar" select="handleIconTabBarSelect">
								<items>
									<IconTabFilter icon="sap-icon://group" text="Project Datails" key="Emp Data" tooltip="Project Data">
										<content>
											<VBox class="sapUiSmallMargin">
												<f:SimpleForm id="SimpleFormDisplayColumn_oneGroup234" editable="false" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4">
													<f:content>
														<Label text="Activity Book No" class="fname"/>
														<Text id="activityBookNumber" text="{DialogModel>/ActivitySelected/0/Discipline ID}"/>
														<Label text="Activity Date" class="fname"/>
														<Text id="activityDate" text="{DialogModel>/ActivitySelected/0/GroupID}"/>
														<Label text="Personnel Area" class="fname"/>
														<Text id="personnelArea" text="{DialogModel>/ActivitySelected/0/CodeID}"/>
														<Label text="Personnel Sub Area" class="fname"/>
														<Text id="personnelSubArea" text="{DialogModel>/ActivitySelected/0/Hours}"/>
														<Label text="Area ID / Description" class="fname"/>
														<Text id="areaId" text="{DialogModel>/ActivitySelected/0/Quantity}"/>
														<Label text="Location / Building" class="fname"/>
														<Text id="location" text="{DialogModel>/ActivitySelected/0/Quantity}"/>
														<Label text="Area Foreman ID" class="fname"/>
														<Text id="areaForemanId" text="{DialogModel>/ActivitySelected/0/Quantity}"/>
														<Label text="Site Engineer ID" class="fname"/>
														<Text id="siteEngineerId" text="{DialogModel>/ActivitySelected/0/Quantity}"/>
													</f:content>
												</f:SimpleForm>
											</VBox>
										</content>
									</IconTabFilter>
									<IconTabSeparator/>
									<IconTabFilter icon="sap-icon://manager" count="" text="Activity Details" key="Activity Details" tooltip="Activity Details">
										<content>
											<Table id="idProductsTable" alternateRowColors="true" mode="SingleSelectLeft" inset="false"
												items="{ path: '/Employees', sorter: { path: 'Name' } }">
												<headerToolbar>
													<Toolbar>
														<ToolbarSpacer/>
														<SearchField liveChange="onSearch" width="50%" search="onSearchTableItems"/>
														<Button icon="sap-icon://add" press="navToActivitydetails"/>
													</Toolbar>
												</headerToolbar>
												<columns>
													<Column width="13em">
														<Text text="Discipline ID"/>
													</Column>
													<Column minScreenWidth="Tablet" demandPopin="true">
														<Text text="Group ID"/>
													</Column>
													<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
														<Text text="Code ID"/>
													</Column>
													<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
														<Text text="Hours"/>
													</Column>
													<Column hAlign="End">
														<Text text="Quantity"/>
													</Column>
												</columns>
												<items>
													<ColumnListItem class="sapUiSizeCompact">
														<cells>
															<ObjectIdentifier title="{DisciplineID}"/>
															<Text text="{GroupID}"/>
															<Text text="{CodeID}"/>
															<ObjectNumber number="{Hours}"/>
															<ObjectNumber number="{Quantity}"/>
														</cells>
													</ColumnListItem>
												</items>
											</Table>
										</content>
									</IconTabFilter>
								</items>
							</IconTabBar>
						</semantic:content>
						<semantic:customFooterContent>
							<Button text="Submit" press="onPress"/>
							<Button text="Save" press="onPress"/>
							<Button text="Cancel" press="onNavBack"/>
							<Button icon="sap-icon://email" tooltip="Send Email" press="onShareEmailPress"/>
						</semantic:customFooterContent>
					</semantic:DetailPage>
				</detailPages>
			</SplitContainer>
		</content>
	</Page>
</mvc:View>